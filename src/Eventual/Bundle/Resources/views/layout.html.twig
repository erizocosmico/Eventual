        <div id="container">
            <aside>
                <h1><span class="fa fa-clock-o"></span> <a href="{{ path('collections_index') }}">Eventual</a></h1>

                <nav>
                    <ul>
                        <li><a href="{{ path('collections_index') }}"><span class="fa fa-bars"></span> Collections</a></li>
                        <li><a href="{{ path('fos_user_profile_edit') }}"><span class="fa fa-cog"></span> Settings</a></li>
                        <li><a href="{{ path('fos_user_change_password') }}"><span class="fa fa-key"></span> Change password</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}"><span class="fa fa-arrow-left"></span> Log Out</a></li>
                    </ul>
                </nav>
            </aside>

            <section>
                {% block content %}{% endblock %}
            </section>
        </div>
    </body>
</html>
